<style>
body {
	font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
	background: linear-gradient(120deg, #f0f4ff 0%, #e0e7ff 100%);
	margin: 0;
	padding: 0;
	min-height: 100vh;
}
.container {
	max-width: 480px;
	margin: 48px auto 0 auto;
	background: #fff;
	border-radius: 18px;
	box-shadow: 0 6px 32px #3b82f620;
	padding: 38px 32px 28px 32px;
	position: relative;
	overflow: hidden;
}
h1, h2 {
	color: #1e293b;
	margin-bottom: 22px;
	font-weight: 700;
	letter-spacing: -1px;
}
a, a:visited {
	color: #2563eb;
	text-decoration: none;
	font-weight: 500;
	transition: color 0.2s;
}
a:hover {
	color: #1d4ed8;
	text-decoration: underline;
}
form label {
	display: block;
	margin-bottom: 16px;
	color: #334155;
	font-size: 1.04em;
}
input[type="text"], input[type="password"] {
	width: 100%;
	padding: 12px 14px;
	margin-top: 6px;
	margin-bottom: 2px;
	border: 1.5px solid #c7d2fe;
	border-radius: 7px;
	font-size: 1.08em;
	background: #f8fafc;
	transition: border 0.2s;
	outline: none;
	box-sizing: border-box;
}
input[type="text"]:focus, input[type="password"]:focus {
	border: 1.5px solid #6366f1;
	background: #eef2ff;
}
button {
	background: linear-gradient(90deg, #6366f1 0%, #2563eb 100%);
	color: #fff;
	border: none;
	border-radius: 7px;
	padding: 11px 22px;
	font-size: 1.05em;
	font-weight: 600;
	cursor: pointer;
	margin-right: 8px;
	margin-top: 10px;
	box-shadow: 0 2px 8px #6366f130;
	transition: background 0.2s, transform 0.1s;
}
button:hover {
	background: linear-gradient(90deg, #4338ca 0%, #1e40af 100%);
	transform: translateY(-2px) scale(1.04);
}
button[style*="background:#dc2626"] {
	background: linear-gradient(90deg, #ef4444 0%, #dc2626 100%) !important;
	color: #fff;
}
button[style*="background:#dc2626"]:hover {
	background: linear-gradient(90deg, #b91c1c 0%, #991b1b 100%) !important;
}
.task-list {
	list-style: none;
	padding: 0;
	margin: 0;
}
.task-list li {
	background: #f1f5f9;
	margin-bottom: 14px;
	padding: 18px 16px 16px 16px;
	border-radius: 10px;
	display: flex;
	align-items: flex-start;
	justify-content: space-between;
	box-shadow: 0 2px 8px #64748b10;
	transition: box-shadow 0.2s;
	gap: 10px;
}
.task-list li:hover {
	box-shadow: 0 4px 16px #6366f120;
}
.task-title {
	font-weight: 600;
	color: #222;
	font-size: 1.08em;
	max-width: 44vw;
	word-break: break-word;
	overflow-wrap: break-word;
	white-space: pre-line;
	display: inline-block;
	vertical-align: top;
}
.task-desc {
	color: #64748b;
	font-size: 0.97em;
	margin-left: 8px;
	max-width: 38vw;
	word-break: break-word;
	overflow-wrap: break-word;
	white-space: pre-line;
	display: inline-block;
	vertical-align: top;
}
.completed {
	text-decoration: line-through;
	color: #94a3b8;
}
.actions {
	display: flex;
	gap: 10px;
	align-items: center;
}
.topbar {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 28px;
}
.topbar a {
	font-size: 1em;
	color: #64748b;
	margin-left: 16px;
	font-weight: 500;
}
.error {
	color: #dc2626;
	background: #fee2e2;
	border: 1px solid #fecaca;
	padding: 10px 14px;
	border-radius: 7px;
	margin-bottom: 18px;
	text-align: center;
	font-size: 1.04em;
}
@media (max-width: 600px) {
	.container {
		max-width: 98vw;
		padding: 18px 4vw 16px 4vw;
	}
	.topbar {
		flex-direction: column;
		gap: 10px;
		align-items: flex-start;
	}
	.task-list li {
		flex-direction: column;
		gap: 8px;
		padding: 14px 8px 12px 8px;
	}
	.task-title, .task-desc {
		max-width: 90vw;
		word-break: break-word;
		overflow-wrap: break-word;
	}
}
</style>